{
	"parser": "babel-eslint",
	"extends": [
		"airbnb-base",
		"plugin:react/recommended"
	],
	"plugins": [
		"sort-class-members"
	],
	"rules": {
		"prefer-destructuring": 0,
		"no-restricted-properties": 0,

		"no-param-reassign": 0,
		"quotes": 0,
		"arrow-body-style": 0,
		"prefer-template": 0,
		"object-shorthand": 0,
		"no-unreachable": 0,
		"no-empty": 0,
		"no-else-return": 0,
		"no-tabs": 0,
		"dot-notation": 0,
		"func-names": 0,
		"import/no-unresolved": 0,
		"import/extensions": 0,
		"import/no-extraneous-dependencies": 0,
		"no-plusplus": 0,
		"no-lonely-if": 0,
		"no-continue": 0,
		"linebreak-style": 0,
		"class-methods-use-this": 0,
		"import/no-absolute-path": 0,
		"no-prototype-builtins": 0,
		"no-useless-constructor": 0,
		"import/prefer-default-export": 0,

		"space-infix-ops": 1,
		"space-before-function-paren": [1, { "anonymous": "never", "named": "never" }],
		"space-in-parens": [1, "always", { "exceptions": ["empty"] }],
		"spaced-comment": [1, "always"],
		"max-len": [1, 300],
		"indent": [1, "tab", { "SwitchCase": 1, "ignoreComments": true }],
		"quote-props": [1, "consistent"],
		"no-trailing-spaces": 1,

		"strict": 2,
		"constructor-super": 2,
		"no-unused-vars": [2, { "vars": "local", "args": "none" }],
		"comma-dangle": [2, "never"],
		"no-bitwise": 2,
		"no-mixed-operators": [
			2,
			{ "allowSamePrecedence": true }
		],
		"no-unused-expressions": [2, { "allowTernary": true }],
		"no-underscore-dangle": [2, { "allowAfterThis": true, "allow": ["_id"] }],
		"no-empty-function": 2,
		"no-restricted-syntax": [
			2,
			"DebuggerStatement",
			"LabeledStatement",
			"WithStatement"
		],
		"sort-class-members/sort-class-members": [
			2,
			{
				"order": [
					"[static-properties]",
					"[static-methods]",
					"constructor",
					"destroy",
					"[properties]",
					"[conventional-private-properties]",
					"[getters]",
					"[setters]",
					"[accessor-pairs]",
					"[event-handlers]",
					"[methods]",
					"[conventional-private-methods]"
				],
				"accessorPairPositioning": "getThenSet",
				"groups": {
					"event-handlers": [{ "name": "/_on.+/", "type": "method" }]
				}
			}
		],
		"id-match": [
			2,
			"^(?!(_numberOf|numberOf)).*$",
			{
				"properties": true
			}
		],
		"no-await-in-loop": 0,
		"no-return-await": 0,
		"no-multi-assign": 0,

		"no-multiple-empty-lines": [ 1, { "max": 2, "maxEOF": 1 } ],
		"operator-linebreak": [ 1, "before" ],
		"object-curly-newline": 0,
		"function-paren-newline": 0
	},
	"globals": {
		"global": false
	},
	"env": {
		"es6": true,
		"node": true,
		"browser": true
	}
}
